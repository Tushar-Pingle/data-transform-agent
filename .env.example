# ===========================================
# Data Transform Agent - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -------------------------------------------
# Databricks Configuration
# -------------------------------------------
# Get these from your Databricks workspace:
# 1. DATABRICKS_HOST: Your workspace URL (without https://)
#    Example: community.cloud.databricks.com
#
# 2. DATABRICKS_TOKEN: Personal Access Token
#    Go to: User Settings → Developer → Access Tokens → Generate New Token
#
# 3. DATABRICKS_WAREHOUSE_ID: SQL Warehouse ID
#    Go to: SQL Warehouses → Click your warehouse → Connection Details
#    Look for "HTTP Path" - the ID is the last part after /warehouses/

DATABRICKS_HOST=community.cloud.databricks.com
DATABRICKS_TOKEN=dapi-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DATABRICKS_WAREHOUSE_ID=xxxxxxxxxxxxxxxx

# Optional: Catalog name (default is 'main' for most workspaces)
DATABRICKS_CATALOG=main

# -------------------------------------------
# Anthropic (Claude) Configuration
# -------------------------------------------
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Model to use (default: claude-sonnet-4-20250514)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# -------------------------------------------
# Application Configuration
# -------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable dry-run mode by default (safer for development)
DEFAULT_DRY_RUN=true